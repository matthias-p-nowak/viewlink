{
  // purely needed to get VS code to work right
  "compilerOptions": {
    "target": "es2021", // Use ES2020 features like optional chaining, nullish coalescing
    "lib": [
      "dom",
      "es2021"
    ],     
    "module": "ES2022", // Or "es2020" for modern module handling
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
  ]
}
